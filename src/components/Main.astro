---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ThemeControls from './ThemeControls.astro';

interface Props {
  noiseEnabled?: boolean;
}

const { noiseEnabled = true } = Astro.props;
---

<main class="min-h-svh flex flex-col justify-between md:max-w-4xl border-1 border-jp-dark-secondary relative">
  <Header />
  <ThemeControls noiseEnabled={noiseEnabled} />
  <slot />
  <Footer />
</main>
